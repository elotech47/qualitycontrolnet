{
    "# General Settings": "Settings that control the overall experiment",
    "experiment_name": "quality_control_experiment",
    "random_seed": 42,
    "device": "cuda",
    
    "# Data Settings": "Settings for data loading and preprocessing",
    "data_root": "all_data",
    "img_size": 224,
    "batch_size": 32,
    "test_size": 0.2,
    "stratify_split": true,
    "num_workers": 4,
    "pin_memory": true,
    
    "# Model Settings": "Settings for the model architecture",
    "model_architecture": "QualityControlNet",
    "backbone": "mobilenet_v2",
    "pretrained": true,
    "feature_dim": 512,
    "dropout_rate": 0.2,
    "num_classes": 2,
    "similarity_head_layers": [512, 256, 128, 1],
    "classification_head_layers": [512, 256, 128, 2],
    
    "# Training Settings": "Settings for the training process",
    "num_epochs": 100,
    "classification_loss": "CrossEntropyLoss",
    "similarity_loss": "MSELoss",
    "classification_weight": 1.0,
    "similarity_weight": 1.0,
    
    "# Optimizer Settings": "Settings for the optimizer",
    "optimizer": "Adam",
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "beta1": 0.9,
    "beta2": 0.999,
    
    "# Scheduler Settings": "Settings for the learning rate scheduler",
    "scheduler": "ReduceLROnPlateau",
    "scheduler_mode": "min",
    "scheduler_factor": 0.1,
    "scheduler_patience": 5,
    "scheduler_min_lr": 1e-6,
    
    "# Early Stopping": "Settings for early stopping",
    "early_stopping": true,
    "early_stopping_patience": 40,
    "early_stopping_min_delta": 0.001,
    
    "# Augmentation Settings": "Settings for data augmentation",
    "use_augmentation": true,
    "aug_rotate90_prob": 0.5,
    "aug_flip_prob": 0.5,
    "aug_shift_limit": 0.1,
    "aug_scale_limit": 0.1,
    "aug_rotate_limit": 45,
    "aug_shift_scale_rotate_prob": 0.5,
    "aug_gauss_noise_var_limit": [10.0, 50.0],
    "aug_mult_noise_multiplier": [0.9, 1.1],
    "aug_noise_prob": 0.1,
    "aug_motion_blur_limit": 3,
    "aug_median_blur_limit": 3,
    "aug_blur_limit": 3,
    "aug_blur_prob": 0.2,
    "aug_clahe_clip_limit": 2,
    "aug_sharpen_alpha": [0.2, 0.5],
    "aug_sharpen_lightness": [0.5, 1.0],
    "aug_emboss_alpha": [0.2, 0.5],
    "aug_emboss_strength": [0.2, 0.7],
    "aug_color_prob": 0.3,
    "mean": [0.485, 0.456, 0.406],
    "std": [0.229, 0.224, 0.225],
    
    "# Logging Settings": "Settings for logging and checkpoints",
    "checkpoint_interval": 5,
    "log_batch_interval": 10,
    "save_best_only": true
}